{
    "editor.codeActionsOnSave": [
        "source.fixAll.eslint"
    ],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "vue"
    ],
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": false,
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[vue]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": false,
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[html]": {
        "editor.formatOnSave": false,
        "editor.formatOnPaste": false,
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[json]": {
        "editor.formatOnSave": false,
        "editor.formatOnPaste": false,
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "json.schemas": [
        {
            "fileMatch": [
                "firebase.json"
            ],
            "url": "https://raw.githubusercontent.com/firebase/firebase-tools/master/schema/firebase-config.json"
        }
    ],
    "volar.completion.autoImportComponent": true,
    "volar.completion.preferredAttrNameCase": "auto-kebab",
    "volar.completion.preferredTagNameCase": "auto-kebab",
    "prettier.enable": false,
    "files.exclude": {
        "**/node_modules": false,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "testing.automaticallyOpenPeekView": "never",
    "compile-hero.disable-compile-files-on-did-save-code": false
}
